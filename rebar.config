{require_otp_vsn, "R14B02"}.
{erl_opts, [fail_on_warning,
            warn_export_all,
            warn_unused_import,
            warn_untyped_record]}.
{xref_checks, [undefined_function_calls]}.
{clean_files, [".qc/*", ".eunit/*", "ebin/*.beam"]}.
%% Jenkins 向け
%% {eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{cover_enabled, true}.
{edoc_opts, [{doclet, edown_doclet},
             {dialyzer_specs, all},
             {report_missing_type, true},
             {report_type_mismatch, true},
             {pretty_print, erl_pp},
             {preprocess, true},
             {todo, true}]}.
{validate_app_modules, true}.
{deps,
  [
   {edown,
    ".*", {git, "git://github.com/esl/edown.git", {branch, "master"}}},
   {mochiweb,
    ".*", {git, "git://github.com/mochi/mochiweb.git", {branch, "master"}}},
   {meck,
    ".*", {git, "git://github.com/eproxus/meck.git", {branch, "master"}}},
   {proper,
    ".*", {git, "git://github.com/manopapad/proper.git", {branch, "master"}}}
  ]}.
