%% {erl_first_files, ["src/snowflake"]}.

{erl_opts, [warnings_as_errors,
            warn_export_all,
            warn_unused_import,
            warn_untyped_record]}.

{xref_checks, [fail_on_warning, undefined_function_calls]}.

{clean_files, [".test/*.beam", ".eunit/*", "ebin/*.beam"]}.

{cover_enabled, true}.

{edoc_opts, [{dialyzer_specs, all}, {report_missing_type, true},
             {report_type_mismatch, true}, {pretty_print, erl_pp},
             {preprocess, true}]}.

{validate_app_modules, true}.

%% {sub_dirs, ["rel"]}.

{deps,
  [
   {jiffy,
    ".*", {git, "git://github.com/davisp/jiffy.git", {branch, "master"}}},
   {ejson,
    ".*", {git, "git://github.com/benoitc/ejson.git", {branch, "master"}}},
   {mochiweb,
    ".*", {git, "git://github.com/mochi/mochiweb.git", {branch, "master"}}},
   {jsx,
    ".*", {git, "git://github.com/talentdeficit/jsx.git", {branch, "develop"}}}

  ]}.


